@{
  Layout = "_Layout";
}
@using Library.Models;

  <h2>Authors</h2>
  <table class="table">
    <thead>
      <tr>
        <th scope="col">Books by @Model["foundAuthor"].Name</th>
      </tr>
    </thead>
    <tbody>
      @foreach(var book in @Model["allAuthorBooks"])
      {
        <tr>
          <td>@book.Title</td>
        </tr>
      }
      <tr>
      </tbody>
    </table>

</br>
</br>
</br>
</br>
<div class="row">
    <div class="col-md-4">
      <h4>Add another Book to @Model["foundAuthor"].Name</h4>
      <form class='form-group' action="/authors/@Model["foundAuthor"].Id/details" method="post">
        <label for='newBook'>Book's Name</label>
        <input name='newBook' type='text' required><br>

        <button type='submit' class='btn btn-success'>Add</button>
      </form>
    </div>
</div>
<a href="/catalog">Back to Catalog</a>
