@{
  Layout = "_Layout";
}
@using Library.Models;

<div class="container">

<div class="row">
    <div class="col-md-6">
      <h2>Add A Book with an Author to Catalog</h2>
      <form class='form-group' action="/addCatalog" method="post">

        <label for='title'>Book Title</label>
        <input name='title' type='text' required><br>

        <label for='name'>Author Name</label>
        <input name='name' type='text' required><br>

        <button type='submit' class='btn btn-success'>Add</button>
      </form>
    </div>
    <div class="col-md-4">
    </div>
    <div class="col-md-2">

    <a href="/">Return Home</a><br>
    <a href="/books"> View Books</a><br>
    <a href="/authors"> View Authors</a>
    </div>
</div>

<div class="col-md-2">

</div>

<h1 class = "catalog">Catalog</h1>

<div class="col-md-5">
  <h2>Books</h2>
  <table class="table">
    <thead>
      <tr>
        <th scope="col">Title</th>
      </tr>
    </thead>
    <tbody>
      @foreach(var book in Book.GetAll())
      {
        <tr>
          <td><li><a href ="/books/@book.Id/details">@book.Title</a></li></td>
        </tr>
      }
      <tr>
      </tbody>
    </table>
  </div>
  <div class="col-md-2">
  </div>
  <div class="col-md-5">
    <h2>Authors</h2>
    <table class="table">
      <thead>
        <tr>
          <th scope="col">Name</th>
        </tr>
      </thead>
      <tbody>
        @foreach(var author in Author.GetAll())
        {
          <tr>
            <td><li><a href ="/authors/@author.Id/details">@author.Name</a></li></td>
          </tr>
        }
        <tr>
        </tbody>
      </table>

    </div>

</div>
